<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F2F2F2"
              android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffFF6633"
        android:paddingTop="10dp"
        android:layout_marginBottom="1dp">

        <include layout="@layout/title"/>
    </LinearLayout>

    <include layout="@layout/title2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:weightSum="7"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="第一层"
                    android:textColor="#FF6922"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/imageView1_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shishui"/>

                <ImageView
                    android:id="@+id/imageView1_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shifei"
                    app:srcCompat="@mipmap/shifei"/>

                <ImageView
                    android:id="@+id/imageView1_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/tongfeng"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageView1_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/wendu"/>

                <ImageView
                    android:id="@+id/imageView1_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/buguang"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="第二层"
                    android:textColor="#FF6922"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/imageView2_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shishui"/>

                <ImageView
                    android:id="@+id/imageView2_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shifei"
                    app:srcCompat="@mipmap/shifei"/>

                <ImageView
                    android:id="@+id/imageView2_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/tongfeng"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageView2_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/wendu"/>

                <ImageView
                    android:id="@+id/imageView2_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/buguang"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="第三层"
                    android:textColor="#FF6922"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/imageView3_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shishui"/>

                <ImageView
                    android:id="@+id/imageView3_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shifei"
                    app:srcCompat="@mipmap/shifei"/>

                <ImageView
                    android:id="@+id/imageView3_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/tongfeng"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageView3_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/wendu"/>

                <ImageView
                    android:id="@+id/imageView3_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/buguang"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="豆芽机"
                    android:textColor="#FF6922"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/imageView4_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shishui"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageView4_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shifei"
                    app:srcCompat="@mipmap/shifei"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageView4_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/tongfeng"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageView4_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/wendu"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageView4_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/buguang"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="蘑菇箱"
                    android:textColor="#FF6922"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_weight="2"/>

                <ImageView
                    android:id="@+id/imageView5_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shishui"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageView5_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/shifei"
                    app:srcCompat="@mipmap/shifei"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageView5_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/tongfeng"/>

                <ImageView
                    android:id="@+id/imageView5_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/wendu"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/imageView5_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/buguang"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/kaishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="确定"
            android:layout_marginRight="40dp"
            android:layout_weight="0.14"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/tingzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止"
            android:background="@drawable/button"
            android:layout_weight="0.13"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>